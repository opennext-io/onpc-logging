# get logs from fluent-logger, fluent-cat or other fluentd instances
<source>
  @type forward
</source>

# Output
<match syslog.**>
  @type elasticsearch
  host localhost
  port {{ es_api_port }}
  logstash_format true
  <buffer>
    flush_interval 10s
  </buffer>

</match>

@include /etc/td-agent/conf.d/*.conf